<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="-1" android:layout_height="-1">
    <SurfaceView android:layout_gravity="11" android:id="@id/preview_view" android:layout_width="-1" android:layout_height="-1" />
    <com.mining.app.zxing.view.ViewfinderView android:id="@id/viewfinder_view" android:layout_width="-2" android:layout_height="-2" />
    <RelativeLayout android:orientation="0" android:id="@id/lay_title" android:background="@color/insurance_transparent_background" android:layout_width="-1" android:layout_height="@dimen/insurance_title_top" android:layout_alignParentTop="true">
        <Button android:id="@id/return_insurance" android:background="@drawable/btn_return_selector" android:layout_width="-2" android:layout_height="-2" android:layout_marginLeft="@dimen/insurance_img_margin" android:layout_alignParentLeft="true" android:layout_centerVertical="true" />
        <TextView android:textColor="@color/insurance_white" android:layout_width="-2" android:layout_height="-2" android:text="@string/insurance_qr_top_text" android:layout_centerInParent="true" style="@style/TopTitleText" />
    </RelativeLayout>
    <RelativeLayout android:id="@id/lay_bottom" android:background="@color/insurance_black" android:layout_width="-1" android:layout_height="@dimen/insurance_bottom_height" android:layout_alignParentBottom="true">
        <LinearLayout android:orientation="1" android:layout_width="-2" android:layout_height="-2" android:layout_centerInParent="true">
            <TextView android:textSize="10sp" android:textColor="@color/insurance_white" android:layout_gravity="1" android:layout_width="-2" android:layout_height="-2" android:layout_marginBottom="@dimen/insurance_text_margin" android:text="@string/insurance_qr_text" />
            <ImageView android:id="@id/img_qr_code" android:background="@drawable/img_two_dimension_code" android:layout_width="-2" android:layout_height="-2" android:scaleType="1" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>

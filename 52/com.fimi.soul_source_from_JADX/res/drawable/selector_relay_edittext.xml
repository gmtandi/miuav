<?xml version="1.0" encoding="utf-8"?>>
<selector>
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="0" android:thickness="0dp">
                    <stroke android:width="2dp" android:color="#00cc33" />
                    <padding android:left="10dp" android:top="5dp" android:right="10dp" android:bottom="5dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_enabled="true">
        <layer-list>
            <item>
                <shape android:shape="0" android:thickness="0dp">
                    <stroke android:width="1dp" android:color="0x106000b" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
